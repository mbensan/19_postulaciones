<p style="color: green"><%= notice %></p>

<% content_for :title, "Offers" %>

<h1>Offers</h1>

<div id="offers">
  <% @offers.each do |offer| %>
    <p>
      <%= link_to offer.title, offer %>
    </p>
  <% end %>
</div>
<% if user_signed_in? && current_user.isadmin %>
  <%= link_to "New offer", new_offer_path %>
<% end%>